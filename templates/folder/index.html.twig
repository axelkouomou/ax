{% extends '/dashboard/layout.html.twig' %}

{% block title %}Folders{% endblock %}

{% block container %}
    <div>
        <h1 class="mb-0">Folders</h1>
    </div>
    <div class="table-responsive mt-3">
				<table class="table table-striped table-hover table-sm mb-0">
					<thead>
						<tr>
							<th>Name <i class="bx bx-up-arrow-alt ms-2"></i>
							</th>
							<th>CreatedAt</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
                         {% for folder in folders %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div><i class="bx bxs-folder me-2 font-24 text-danger"></i>
                                        </div>
                                        <div class="font-weight-bold ">{{ folder.name }}</div>
                                    </div>
                                </td>
                               
                                <td>{{ folder.createdAt ? folder.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                
                                    <div class="dropdown">
                                    <a  type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-ellipsis-h font-24"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{ path('app_folder_show', {'id': folder.id}) }}">Show</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_folder_edit', {'id': folder.id}) }}">Edit</a></li>
                                       
                                    </ul>
                                    </div>
                               </td>
                               
                              
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
					
					</tbody>
				</table>
		</div>
   

    <a class="btn btn-primary" href="{{ path('app_folder_new') }}">Create new</a>
{% endblock %}
