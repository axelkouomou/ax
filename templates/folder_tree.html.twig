<div class="card">
    <div class="card-body">
       
        <div class="mt-3"></div>
      
        {% if folder is defined %}
       
       
            <div class="d-flex align-items-center">
                <div class="fm-file-box bg-light-primary text-primary"><i class="bx bx-folder"></i>
                </div>
                
                    <div class="flex-grow-1 ms-2">
                        <a href="{{ path('app_folder_show', {'id': folder.id}) }}">
                            <h6 class="mb-0">{{folder.name}}</h6>
                        </a>

                        <!-- Liste de fichiers cachée au départ -->
                        <ul class="filelist" id="filelist-{{ folder.id }}" style="display: none;">
                            {% for file in folder.files %}
                                <li>{{ file.filename }}</li>
                            {% endfor %}
                        </ul>
                    </div>
               
                 <a  data-bs-toggle="collapse" href="#collapse1" role="button" aria-expanded="false" aria-controls="collapse1">
                <h6 class="text-primary mb-0">
                    
                    <i class="bx bx-plus"></i>
                
                </h6>
                </a>
            </div>
        
        
        <div class="collapse" id="collapse1">
            {% for item in folder.folders  %}
                {% if folder.id != item.id %}
                <div class="d-flex align-items-center mt-3 ms-2">
                        <div class="fm-file-box bg-light-success text-success"><i class="bx bxs-folder"></i>
                        </div>
                        <div class="flex-grow-1 ms-2">
                        <a href="{{ path('app_folder_show', {'id': item.id}) }}">
                            <h6 class="mb-0">{{item.name}}</h6>
                        </a>
                        </div>
                        <h6 class="text-primary mb-0"><i class="bx bx-plus"></i></h6>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
       
    </div>
    </div>
