{% extends '/dashboard/layout.html.twig' %}
{% block title %}User index{% endblock %}

{% block container %}
    <div>
        <h1 class="mb-0">User</h1>
    </div>
<div class="table-responsive mt-3">
        <table class="table table-striped table-hover table-sm mb-0">
            <thead>
                <tr>
                <th>Email      </th>
                <th>Roles      </th>
                <th>Password   </th>
                <th>IsVerified </th>
                <th>actions    </th>
                </tr>
            </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <div><i class="bx bxs-user me-2 font-24 text-danger"></i>
                        </div>
                        <div class="font-weight-bold ">{{ user.email }}</div>
                    </div>
                </td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>

                <div class="dropdown">
                    <a  type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-ellipsis-h font-24"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_user_show', {'id': user.id}) }}">show</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></li>
                   </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a class="btn btn-primary mt-3" href="{{ path('app_user_new') }}">Create new</a>

{% endblock %}
