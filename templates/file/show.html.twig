{% extends '/dashboard/layout.html.twig' %}

{% block title %}File{% endblock %}

{% block container %}
    <h1>File</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ file.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ file.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ file.date ? file.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <td>
                    {% if file.folder %}
                    <p><strong>Dossier :</strong> {{ file.folder.name }}</p>
                    {% else %}
                    <p><strong>Dossier :</strong> Aucun</p>
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('app_file_index') }}">back to list</a>

    <a class="btn btn-secondary" href="{{ path('app_file_edit', {'id': file.id}) }}">edit</a>

    <br>
    <br>

    <a class="btn btn-danger" href="{{ include('file/_delete_form.html.twig') }}</a>
    
{% endblock %}
